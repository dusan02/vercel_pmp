{
    "buildCommand": "npm install && npm run build",
    "installCommand": "npm install --legacy-peer-deps",
    "framework": "nextjs",
    "functions": {
        "src/app/api/**/*.ts": {
            "maxDuration": 300
        }
    },
    "crons": [
        {
            "path": "/api/cron/reset-movers",
            "schedule": "5 5 * * *"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}