{
    "buildCommand": "npm install && npm run build",
    "installCommand": "npm install --legacy-peer-deps",
    "framework": "nextjs",
    "functions": {
        "src/app/api/**/*.ts": {
            "maxDuration": 300
        }
    },
    "crons": [
        {
            "path": "/api/cron/verify-sector-industry",
            "schedule": "0 2 * * *"
        },
        {
            "path": "/api/cron/update-static-data",
            "schedule": "5 5 * * *"
        },
        {
            "path": "/api/cron/verify-prevclose",
            "schedule": "0 8,14,20 * * *"
        },
        {
            "path": "/api/cron/check-premarket-movements",
            "schedule": "0 8 * * *"
        },
        {
            "path": "/api/cron/heatmap-keep-warm",
            "schedule": "*/10 * * * *"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}