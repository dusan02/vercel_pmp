generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model EarningsCalendar {
  id                     String   @id @default(cuid())
  ticker                 String
  companyName            String
  date                   DateTime
  time                   String
  epsEstimate            Float?
  epsActual              Float?
  revenueEstimate        Float?
  revenueActual          Float?
  epsSurprisePercent     Float?
  revenueSurprisePercent Float?
  marketCap              Float?
  percentChange          Float?
  marketCapDiff          Float?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@unique([ticker, date])
  @@index([date])
  @@index([ticker])
}

model UserPreferences {
  id              String   @id @default(cuid())
  userId          String   @unique
  favorites       String
  theme           String   @default("auto")
  defaultTab      String   @default("all")
  autoRefresh     Boolean  @default(true)
  refreshInterval Int      @default(30)
  showEarnings    Boolean  @default(true)
  showNews        Boolean  @default(true)
  tableColumns    String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Ticker {
  symbol              String    @id
  name                String?
  sector              String?
  industry            String?
  logoUrl             String?
  sharesOutstanding   Float?
  adrRatio            Float?
  isAdr               Boolean   @default(false)
  latestPrevClose     Float?
  latestPrevCloseDate DateTime?

  // Cached values for efficient sorting (SQL-first architecture)
  lastPrice         Float?
  lastChangePct     Float?
  lastMarketCap     Float?
  lastMarketCapDiff Float?
  lastPriceUpdated  DateTime?

  updatedAt     DateTime       @updatedAt
  dailyRefs     DailyRef[]
  sessionPrices SessionPrice[]
  userFavorites UserFavorite[]

  @@index([sector])
  @@index([sharesOutstanding])
  @@index([latestPrevCloseDate])
  @@index([lastPrice])
  @@index([lastChangePct])
  @@index([lastMarketCap])
  @@index([lastMarketCapDiff])
}

model DailyRef {
  id            String   @id @default(cuid())
  symbol        String
  date          DateTime
  previousClose Float
  todayOpen     Float?
  regularClose  Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  ticker        Ticker   @relation(fields: [symbol], references: [symbol], onDelete: Cascade)

  @@unique([symbol, date])
  @@index([date])
  @@index([symbol])
}

model SessionPrice {
  id        String   @id @default(cuid())
  symbol    String
  date      DateTime
  session   String
  lastPrice Float
  lastTs    DateTime
  changePct Float
  source    String
  quality   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ticker    Ticker   @relation(fields: [symbol], references: [symbol], onDelete: Cascade)

  @@unique([symbol, date, session])
  @@index([date, session])
  @@index([symbol, session])
  @@index([lastTs])
  @@index([changePct])
}

model UserFavorite {
  id        String   @id @default(cuid())
  userId    String
  ticker    String
  createdAt DateTime @default(now())
  tickerRef Ticker   @relation(fields: [ticker], references: [symbol], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
  @@index([ticker])
}
