generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  favorites     UserFavorite[]
  portfolio     PortfolioItem[]
  preferences   UserPreferences?
}

model PortfolioItem {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ticker    String
  quantity  Float
  avgPrice  Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickerRef Ticker   @relation(fields: [ticker], references: [symbol], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
  @@index([ticker])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model UserPreferences {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  favorites       String
  theme           String   @default("auto")
  defaultTab      String   @default("all")
  autoRefresh     Boolean  @default(true)
  refreshInterval Int      @default(30)
  showEarnings    Boolean  @default(true)
  showNews        Boolean  @default(true)
  tableColumns    String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model EarningsCalendar {
  id                     String   @id @default(cuid())
  ticker                 String
  companyName            String
  date                   DateTime
  time                   String
  epsEstimate            Float?
  epsActual              Float?
  revenueEstimate        Float?
  revenueActual          Float?
  epsSurprisePercent     Float?
  revenueSurprisePercent Float?
  marketCap              Float?
  percentChange          Float?
  marketCapDiff          Float?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@unique([ticker, date])
  @@index([date])
  @@index([ticker])
}

model Ticker {
  symbol              String    @id
  name                String?
  sector              String?
  industry            String?
  logoUrl             String?
  sharesOutstanding   Float?
  adrRatio            Float?
  isAdr               Boolean   @default(false)
  latestPrevClose     Float?
  latestPrevCloseDate DateTime?

  // Cached values for efficient sorting (SQL-first architecture)
  lastPrice         Float?
  lastChangePct     Float?
  lastMarketCap     Float?
  lastMarketCapDiff Float?
  lastPriceUpdated  DateTime?

  updatedAt     DateTime       @updatedAt
  dailyRefs     DailyRef[]
  sessionPrices SessionPrice[]
  userFavorites UserFavorite[]
  portfolio     PortfolioItem[]

  @@index([sector])
  @@index([sharesOutstanding])
  @@index([latestPrevCloseDate])
  @@index([lastPrice])
  @@index([lastChangePct])
  @@index([lastMarketCap])
  @@index([lastMarketCapDiff])
  @@index([sector, lastMarketCap])
  @@index([industry, lastMarketCap])
}

model DailyRef {
  id            String   @id @default(cuid())
  symbol        String
  date          DateTime
  previousClose Float
  todayOpen     Float?
  regularClose  Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  ticker        Ticker   @relation(fields: [symbol], references: [symbol], onDelete: Cascade)

  @@unique([symbol, date])
  @@index([date])
  @@index([symbol])
}

model SessionPrice {
  id        String   @id @default(cuid())
  symbol    String
  date      DateTime
  session   String
  lastPrice Float
  lastTs    DateTime
  changePct Float
  source    String
  quality   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ticker    Ticker   @relation(fields: [symbol], references: [symbol], onDelete: Cascade)

  @@unique([symbol, date, session])
  @@index([date, session])
  @@index([symbol, session])
  @@index([lastTs])
  @@index([changePct])
}

model UserFavorite {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ticker    String
  createdAt DateTime @default(now())
  tickerRef Ticker   @relation(fields: [ticker], references: [symbol], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
  @@index([ticker])
}
